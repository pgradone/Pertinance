<h2 class="page-header">
  FieLDs <a class="btn btn-primary" href="/flds/new">+</a>
</h2>
<form action="/fields" method="GET">
  <div class="form-row">
    <div class="form-item">
      <label>field</label>
      <input type="text" name="field" value="<%= searchOptions.field %>" />
    </div>
  </div>
  <div class="form-row form-row-end">
    <button class="btn btn-primary" type="submit">Search</button>
  </div>
</form>
<% flds.forEach(fld => { %>
<div class="btn-row">
  <div><%= fld.field %></div>
  <a class="btn btn-primary" href="/flds/<%= fld.id %>">View</a>
  <a class="btn btn-primary" href="/flds/<%= fld.id %>/edit">Edit</a>
  <%- include('../partials/deleteForm', { url: `/flds/${fld.id}`}) %>
</div>
<% }) %>
