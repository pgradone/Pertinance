<div class="form-item">
  <label>keyWord</label>
  <input type="text" name="keyWord" value="<%= kwd.keyWord %>" />
</div>
<div class="form-row">
  <div class="form-item">
    <label>main Keyword</label>
    <select name="mainKwd">
      <option selected label="---" value="null"></option>
      <% kwds.forEach(kwd => { %>
        <option <%= kwd.id == (mainKwd ? mainKwd.id : null) ? 'selected' : '' %> label="<%= kwd.keyWord %>" value="<%= kwd.id %>"></option>
      <% }) %>
    </select>
  </div>
  <div class="form-item">
    <label>field</label>
    <select name="fld">
      <% flds.forEach(fld => { %> <% if (fld.id == kwd.fld) { %>
      <option selected label="<%=fld.field %>" value="<%= fld.id %>"></option>
      <% } else { %>
      <option label="<%=fld.field %>" value="<%= fld.id %>"></option>
      <% } %> <% }) %>
    </select>
  </div>
</div>
